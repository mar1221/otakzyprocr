<legend>Osobní údaje</legend>
<div class="field">
  <%= f.label :firstname, 'Jméno' %>
  <%= f.text_field :firstname %>
  <span class="fieldWithErrors"><%= @citizen.errors[:firstname].first %></span>
</div>

<div class="field">
  <%= f.label :lastname, 'Přijmení' %>
  <%= f.text_field :lastname %>
  <span class="fieldWithErrors"><%= @citizen.errors[:lastname].first %></span>
</div>

<div class="select">
  <%= f.label :county_id, 'Okres *' %>
  <%= f.collection_select :county_id, @counties, :id, :name, :include_blank => true %>
  <span class="fieldWithErrors"><%= @citizen.errors[:county_id].first %></span>
</div>

<div class="buttons">
  <%= f.label :gender, 'Muž' %> <%= f.radio_button :gender, 'male' %> |
  <%= f.label :gender, 'Žena' %> <%= f.radio_button :gender, 'female' %>
  <span class="fieldWithErrors"><%= @citizen.errors[:gender].first %></span>
</div>

<div class="select">
  <%= f.label :age, 'Věk *' %>
  <%= f.select :age, @years %>
  <span class="fieldWithErrors"><%= @citizen.errors[:age].first %></span>
</div>