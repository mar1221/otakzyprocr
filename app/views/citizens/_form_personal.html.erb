<h2>Osobní údaje</h2>
<div class="field">
  <%= f.label :firstname, 'Jméno' %>
  <%= f.text_field :firstname %>
</div>

<div class="field">
  <%= f.label :lastname, 'Přijmení' %>
  <%= f.text_field :lastname %>
</div>
  
<div class="select">
  <%= f.label :county_id, 'Okres *' %>
  <%= f.collection_select :county_id, @counties, :id, :name, :include_blank => true %>
</div>

<div class="buttons">
  <%= f.radio_button :sex, 'male' %> <%= f.label :sex, 'Muž' %>
  <%= f.radio_button :sex, 'female' %> <%= f.label :sex, 'Žena' %>
</div>

<div class="select">
  <%= f.label :age, 'Věk *' %>
  <%= f.select :age, @years %>
</div>