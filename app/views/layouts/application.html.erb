<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
  <% site_bar = render('/refinery/site_bar', :head => true) -%>  
  <%= render '/refinery/head' %>        

  <body>
    <%= site_bar -%>
    <%= render '/refinery/ie6check' if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>
    <div class="container" id="wrapper">
    <header>
      <div class="container" id="header">
        <div class="row">
          <div class="span3">            
            <a href="#"><%= image_tag 'logo.png' %></a>
          </div>
          <div class="span9" id="topmenu">              
            <ul id="nav-links">
              <% if current_user %>
                <li>
                  Jste přihlášen jako: 
                  <% if !current_user.firstname.blank? && !current_user.lastname.blank? %>
                    <%= current_user.firstname %> <%= current_user.lastname %>
                  <% else %>
                    <%= current_user.email %>
                  <% end %>
                </li>
                <% if session[:user_type] == 'Refinery::Keepers::Keeper' %>
                  <li><%= link_to 'Správa účtu', main_app.keeper_path(current_user) %></li>
                <% end %>
                <% if session[:user_type] == 'Refinery::Citizens::Citizen' %>
                  <li><%= link_to 'Správa účtu', main_app.citizen_path(current_user) %></li>
                <% end %>
                <li><%= link_to 'Odhlásit se', main_app.session_path("current"), method: "delete" %></li>
              <% else %>
                <li><%= link_to 'Registrovat se', main_app.new_citizen_path %></li>
                <li><%= link_to 'Přihlásit se', main_app.new_session_path %></li>
              <% end %>
            </ul>
            <h1 id='logo'>
              <%= link_to 'Strategické otázky pro Českou Republiku', refinery.root_path %>
            </h1>          
          </div>
        </div>
      </div>

      <div class="navbar">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
              </a>
            <div class="nav-wrap">
                  <div class="nav-collapse" id="example-one">
                    <%= render '/refinery/header' -%>
                  </div><!-- /.nav-collapse -->
            </div>
            </div><!-- /.container -->
        </div><!-- /.navbar-inner -->
      </div><!-- /.navbar -->
      <%= link_to 'Statistiky', '/stats' %>
    </header>

    <% if flash.any? %>
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name %>">
          <a class="close" data-dismiss="alert" href="#">×</a>
          <strong><%= msg %></strong>
        </div>        
      <% end %>
    <% end %>

    <section id="page">      

      <section class="" id="primary_content">
        <div class="container">
          <div class="row">
            <div class="span12">
              <div class="content_holder">

                <% if request.fullpath == refinery.root_path %>
                <%= render 'layouts/questions' %>
                <% end %>

                <%= yield %>
              </div>
          </div>
        </div>
      </section>
    </section>                  
  </div>  

  <footer>
    <%= render '/refinery/footer' -%>          
  </footer>

  <%= render '/refinery/javascripts' %>
  </body>
</html>