<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.each do |key, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  

  <%= render "form_#{@user.current_step}", :f => f %>

  <div class="actions">
    <%= f.submit 'Registrovat se' %>
  </div>
<% end %>