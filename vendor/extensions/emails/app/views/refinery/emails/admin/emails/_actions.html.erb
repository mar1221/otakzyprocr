<ul>
  <% if ::Refinery::Emails::Admin::EmailsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.emails_admin_emails_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_emails_admin_email_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Emails::Admin::EmailsController.sortable? && ::Refinery::Emails::Email.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Emails"),
                 refinery.emails_admin_emails_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Emails"),
                 refinery.emails_admin_emails_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
