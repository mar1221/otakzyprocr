<% content_for :body_content_title do %>
  <%= @email.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @email.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @email.content %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="emails">
      <% @emails.each do |email| %>
        <li>
          <%= link_to email.title, refinery.emails_email_path(email) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
