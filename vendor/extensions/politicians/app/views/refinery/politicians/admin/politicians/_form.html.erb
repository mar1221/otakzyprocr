<%= form_for [refinery, :politicians_admin, @politician] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @politician,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :firstname -%>
    <%= f.text_field :firstname -%>
  </div>

  <div class='field'>
    <%= f.label :lastname -%>
    <%= f.text_field :lastname -%>
  </div>
  
  <div class='field'>
    <%= f.label :contact_person -%>
    <%= f.text_field :contact_person -%>
  </div>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email, :class => 'larger widest'  -%>
  </div>

  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone -%>
  </div>

  <div class='field'>
    <%= f.label :notes -%>
    <%= f.text_area :notes -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.politicians.admin.politicians.politician'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => "#{@politician.firstname} #{@politician.lastname}") %>
<% end -%>