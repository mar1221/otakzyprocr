<ul>
  <% if ::Refinery::Politicians::Admin::PoliticiansController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.politicians_admin_politicians_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_politicians_admin_politician_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Politicians::Admin::PoliticiansController.sortable? && ::Refinery::Politicians::Politician.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Politicians"),
                 refinery.politicians_admin_politicians_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Politicians"),
                 refinery.politicians_admin_politicians_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
