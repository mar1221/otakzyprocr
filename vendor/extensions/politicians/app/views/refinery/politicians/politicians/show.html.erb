<% content_for :body_content_title do %>
  <%= @politician.firstname %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @politician.firstname %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="politicians">
      <% @politicians.each do |politician| %>
        <li>
          <%= link_to politician.firstname, refinery.politicians_politician_path(politician) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
