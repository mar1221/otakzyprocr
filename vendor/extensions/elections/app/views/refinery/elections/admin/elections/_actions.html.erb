<ul>
  <% if ::Refinery::Elections::Admin::ElectionsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.elections_admin_elections_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_elections_admin_election_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Elections::Admin::ElectionsController.sortable? && ::Refinery::Elections::Election.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Elections"),
                 refinery.elections_admin_elections_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Elections"),
                 refinery.elections_admin_elections_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
