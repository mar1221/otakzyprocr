<% content_for :body_content_title do %>
  <%= @citizen.firstname %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Firstname</h1>
    <p>
      <%=raw @citizen.firstname %>
    </p>
  </section>
  <section>
    <h1>Lastname</h1>
    <p>
      <%=raw @citizen.lastname %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @citizen.email %>
    </p>
  </section>
  <section>
    <h1>Password Digest</h1>
    <p>
      <%=raw @citizen.password_digest %>
    </p>
  </section>
  <section>
    <h1>Age</h1>
    <p>
      <%=raw @citizen.age %>
    </p>
  </section>
  <section>
    <h1>County</h1>
    <p>
      <%=raw @citizen.county %>
    </p>
  </section>
  <section>
    <h1>Sex</h1>
    <p>
      <%=raw @citizen.sex %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="citizens">
      <% @citizens.each do |citizen| %>
        <li>
          <%= link_to citizen.firstname, refinery.citizens_citizen_path(citizen) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
