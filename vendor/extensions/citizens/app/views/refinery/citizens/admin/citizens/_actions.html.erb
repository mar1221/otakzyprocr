<ul>
  <% if ::Refinery::Citizens::Admin::CitizensController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.citizens_admin_citizens_path %>
    </li>
  <% end %>
<% if !searching? && ::Refinery::Citizens::Admin::CitizensController.sortable? && ::Refinery::Citizens::Citizen.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Citizens"),
                 refinery.citizens_admin_citizens_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Citizens"),
                 refinery.citizens_admin_citizens_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
