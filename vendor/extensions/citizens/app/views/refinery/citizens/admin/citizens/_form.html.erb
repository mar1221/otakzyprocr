<%= form_for [refinery, :citizens_admin, @citizen] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @citizen,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :firstname -%>
    <%= f.text_field :firstname, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :lastname -%>
    <%= f.text_field :lastname  -%>

  </div>

  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email  -%>

  </div>

  
  <div class='field'>
    <%= f.label :street -%>
    <%= f.text_field :street  -%>

  </div>
  
  <div class='field'>
    <%= f.label :street_number -%>
    <%= f.number_field :street_number  -%>

  </div>
  
  <div class='field'>
    <%= f.label :postal_code -%>
    <%= f.text_field :postal_code  -%>

  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city  -%>

  </div>
  
  <div class='field'>
    <%= f.label :county_id -%>
    <%= f.number_field :county_id  -%>

  </div>
  
  <div class='field'>
    <%= f.label :gender -%>
    <%= f.text_field :gender  -%>

  </div>
  
  <div class='field'>
    <%= f.label :age -%>
    <%= f.number_field :age  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.citizens.admin.citizens.citizen'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @citizen.firstname) %>
<% end -%>
