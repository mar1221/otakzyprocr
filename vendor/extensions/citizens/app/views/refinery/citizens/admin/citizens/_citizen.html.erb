<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(citizen) -%>">
  <span class='title'>
    <%= citizen.firstname %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.citizens_citizen_path(citizen),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_citizens_admin_citizen_path(citizen),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.citizens_admin_citizen_path(citizen),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => citizen.firstname),
        :method => :delete %>
  </span>
</li>