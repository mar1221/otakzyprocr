<% content_for :body_content_title do %>
  <%= @party.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @party.name %>
    </p>
  </section>
  <section>
    <h1>Parliament Candidates</h1>
    <p>
      <%=raw @party.parliament_candidates %>
    </p>
  </section>
  <section>
    <h1>Senat Candidates</h1>
    <p>
      <%=raw @party.senat_candidates %>
    </p>
  </section>
  <section>
    <h1>County Leaders</h1>
    <p>
      <%=raw @party.county_leaders %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="parties">
      <% @parties.each do |party| %>
        <li>
          <%= link_to party.name, refinery.parties_party_path(party) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
